<%-
  model_class = Article
  page_title 'Arrest Charges'
  page_title_right link_to("#{model_class.model_name.human.pluralize.titleize} CSV Download", articles_path(format: :csv), class: 'btn btn-default')
-%>

<% if user_signed_in? %>
  <div class='actions-container'>
    <%= render partial: 'shared/index_actions',
          locals: {
            model_class: model_class,
            new_path: new_article_path
          }
    %>
  </div>
<% end %>

<%-
  datatable_class = (can? :edit, Article) ? 'datatable-admin' : 'datatable'
-%>
<table class="table table-striped table-hover table-nonfluid <%= datatable_class %>">
  <thead>
    <tr>
      <th></th>
      <th><%= model_class.human_attribute_name(:criminal_code_id) %></th>
      <th>Article Number</th>
      <th>Number of Sentences</th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <% if can? :edit, Article %><th><%=t '.actions', :default => t("helpers.actions") %></th><% end %>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to t('helpers.links.view'), article_path(article), class: 'btn btn-default' %></td>
        <td><%= article.criminal_code.name %></td>
        <td><%= article.number %></td>
        <td><%= article.incidents.count %></td>
        <td><%= simple_format_no_tags(article.description) if article.description.present? %></td>
        <% if (can? :edit, article) || (can? :destroy, article) %>
          <td>
            <%= if can? :edit, article
                  link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_article_path(article), :class => 'btn btn-default btn-xs'
            end %>
            <%= if can? :destroy, article
                  link_to t('.destroy', :default => t("helpers.links.destroy")),
                        article_path(article),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger'
            end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
