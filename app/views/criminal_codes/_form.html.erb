<% object = @criminal_code %>
<%= semantic_form_for object do |f| %>
  <%= f.semantic_errors *f.object.errors.keys %>

  <%= render layout: 'shared/form/translated_inputs',
             locals: { object: object } do |params| %>
    <%= f.input "name_#{params[:enabled_locale]}",
                label: "#{t('activerecord.attributes.criminal_code.name')} "\
                       "(#{params[:enabled_locale_name]})" %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, button_html: { class: 'btn btn-success' } %>
  <% end %>
<% end %>
