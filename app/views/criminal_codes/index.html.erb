<h1>Listing criminal_codes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @criminal_codes.each do |criminal_code| %>
      <tr>
        <td><%= criminal_code.name %></td>
        <td><%= link_to 'Show', criminal_code %></td>
        <td><%= link_to 'Edit', edit_criminal_code_path(criminal_code) %></td>
        <td><%= link_to 'Destroy', criminal_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Criminal code', new_criminal_code_path %>
