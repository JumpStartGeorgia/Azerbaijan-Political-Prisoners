<%- model_class = CriminalCode -%>
<% page_title model_class.model_name.human.titleize + ': ' + @criminal_code.name %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              criminal_codes_path, :class => 'btn btn-default'  %>
<%= if can? :edit, @criminal_code
      link_to t('.edit', :default => t("helpers.links.edit")),
              edit_criminal_code_path(@criminal_code), :class => 'btn btn-default'
end %>
<%= if can? :destroy, @criminal_code
      link_to t('.destroy', :default => t("helpers.links.destroy")),
              criminal_code_path(@criminal_code),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger'
end %>
