<% object = @page_section %>
<%= semantic_form_for object do |f| %>
  <%= f.semantic_errors *f.object.errors.keys %>
  <%= f.inputs do %>
    <% if can? :create, PageSection %>
      <%= f.input :name %>
    <% end %>

    <%= render layout: 'shared/form/translated_inputs',
               locals: { object: object } do |locale_name| %>
      <%= f.input "label_#{locale}",
                  label: "#{t('activerecord.attributes.page_section.label')} "\
                         "(#{locale_name})" %>
      <%= f.input "content_#{locale}",
                  as: :text,
                  label: "#{t('activerecord.attributes.page_section.content')} (#{locale_name})",
                  input_html: { class: 'tinymce' } %>
    <% end %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, button_html: { class: 'btn btn-success' } %>
  <% end %>
<% end %>
