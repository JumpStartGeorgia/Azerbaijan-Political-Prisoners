<%= semantic_form_for @page_section do |f| %>
  <%= f.semantic_errors *f.object.errors.keys %>
  <%= f.inputs do %>
    <% if can? :create, PageSection %>
      <%= f.input :name %>
    <% end %>
    
    <ul class="nav nav-tabs form-translation-tabs" role="tablist">
      <% @page_section.globalize_locales.each do |locale| %>
        <% cls = locale == I18n.default_locale ? 'active' : '' %>
        <li role="presentation" class="<%= cls %>"><a href="#translation-<%= locale %>" aria-controls="<%= locale %>" role="tab" data-toggle="tab"><%= t("shared.locale.#{locale}") %></a></li>
      <% end %>
    </ul>    

    <div class="tab-content form-translation-content">
      <% @page_section.globalize_locales.each do |locale| %>
        <% cls = locale == I18n.default_locale ? 'active' : '' %>
        <div role="tabpanel" class="tab-pane <%= cls %>" id="translation-<%= locale %>">
          <% locale_name = t("shared.locale.#{locale}") %>
          <%= f.input "label_#{locale}", label: "#{t('activerecord.attributes.page_section.label')} (#{locale_name})" %>
          <%= f.input "content_#{locale}", as: :text, label: "#{t('activerecord.attributes.page_section.content')} (#{locale_name})", input_html: { class: 'tinymce' } %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, button_html: { class: 'btn btn-success' } %>
  <% end %>
<% end %>
