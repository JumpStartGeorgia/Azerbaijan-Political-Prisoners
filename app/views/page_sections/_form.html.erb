<%= semantic_form_for @page_section do |f| %>
  <%= f.semantic_errors *f.object.errors.keys %>
  <%= f.inputs do %>
    <% if can? :create, PageSection %>
      <%= f.input :name %>
    <% end %>

    <%= render partial: 'shared/form/translation/tabs', locals: { object: @page_section } %>

    <%= render layout: 'shared/form/translation/inputs', locals: { object: @page_section } do |locale_name| %>
      <%= f.input "label_#{locale}", label: "#{t('activerecord.attributes.page_section.label')} (#{locale_name})" %>
      <%= f.input "content_#{locale}", as: :text, label: "#{t('activerecord.attributes.page_section.content')} (#{locale_name})", input_html: { class: 'tinymce' } %>
    <% end %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, button_html: { class: 'btn btn-success' } %>
  <% end %>
<% end %>
