<% show_name = (can? :create, @page_section) ? true : false %>

<p id="notice"><%= notice %></p>

<h1>Listing Page Sections</h1>

<table>
  <thead>
    <tr>
      <% if show_name %>
        <th>Name</th>
      <% end %>
      <th>Label</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @page_sections.each do |page_section| %>
      <tr>
        <% if show_name %>
          <td><%= page_section.name %></td>
        <% end %>
        <td><%= page_section.label %></td>
        <td><%= page_section.content %></td>
        <td><%= link_to 'Show', page_section %></td>
        <td><%= link_to 'Edit', edit_page_section_path(page_section) %></td>
        <td><%= link_to 'Destroy', page_section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page Section', new_page_section_path %>
