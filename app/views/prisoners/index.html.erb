<%- model_class = Prisoner -%>
<% page_title "#{model_class.model_name.human.pluralize.titleize}" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:currently_imprisoned) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <% if_can_edit_or_destroy?(Prisoner) { %><th><%=t '.actions', :default => t("helpers.actions") %></th><% } %>
    </tr>
  </thead>
  <tbody>
    <% @prisoners.each do |prisoner| %>
      <tr>
        <td><%= link_to prisoner.id, prisoner_path(prisoner) %></td>
        <td><%= link_to prisoner.name, prisoner_path(prisoner) %></td>
        <td><% if prisoner.currently_imprisoned %>Yes<% elsif prisoner.currently_imprisoned == false %>No<% end %></td>
        <td><%= prisoner.created_at %></td>
          <% if_can_edit_or_destroy?(prisoner) { %>
        <td>
          <%= if can? :edit, prisoner
                link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_prisoner_path(prisoner), :class => 'btn btn-default btn-xs'
              end %>
          <%= if can? :destroy, prisoner
                link_to t('.destroy', :default => t("helpers.links.destroy")),
                      prisoner_path(prisoner),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger'
          end %>
        </td>
            <% } %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= if can? :new, Prisoner
      link_to t('.new', :default => t("helpers.links.new")),
            new_prisoner_path,
            :class => 'btn btn-primary'
end %>
