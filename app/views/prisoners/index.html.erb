<%- model_class = Prisoner -%>
<% page_title "#{model_class.model_name.human.pluralize.titleize}" %>

<div class='actions-container'>
  <%= render partial: 'shared/index_actions',
        locals: {
          model_class: model_class,
          new_path: new_prisoner_path
        }
  %>
  <%= link_to "#{model_class.model_name.human.pluralize.titleize} CSV Download", prisoners_path(format: :csv), class: 'btn btn-default' %>
  <%= link_to "#{Incident.model_name.human.pluralize.titleize} CSV Download", incidents_to_csv_prisoners_path, class: 'btn btn-default' %>
</div>

<%-
  datatable_class = can? :edit, Prisoner ? 'datatable-admin' : 'datatable'
-%>
<table class="table table-striped <%= datatable_class %>">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:currently_imprisoned) %></th>
      <th>Total Days in Prison</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <% if can? :edit, Prisoner %><th><%=t '.actions', :default => t("helpers.actions") %></th><% end %>
    </tr>
  </thead>
  <tbody>
    <% @prisoners.each do |prisoner| %>
      <tr>
        <td><%= link_to prisoner.id, prisoner_path(prisoner) %></td>
        <td><%= link_to prisoner.name, prisoner_path(prisoner) %></td>
        <td><% if prisoner.currently_imprisoned %>Yes<% elsif prisoner.currently_imprisoned == false %>No<% end %></td>
        <td>
          <%= prisoner.total_days_in_prison %>
        </td>
        <td><%= prisoner.created_at %></td>
        <% if (can? :edit, prisoner) || (can? :destroy, prisoner) %>
          <td>
            <%= if can? :edit, prisoner
                  link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_prisoner_path(prisoner), :class => 'btn btn-default btn-xs'
                end %>
            <%= if can? :destroy, prisoner
                  link_to t('.destroy', :default => t("helpers.links.destroy")),
                        prisoner_path(prisoner),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger'
            end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
