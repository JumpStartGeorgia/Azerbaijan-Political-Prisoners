<%- model_class = Prison -%>
<% page_title "#{model_class.model_name.human.pluralize.titleize}" %>

<div class='actions-container'>
  <%= render partial: 'shared/index_actions',
        locals: {
          model_class: model_class,
          new_path: new_prison_path
        }
  %>
  <%= link_to "#{model_class.model_name.human.pluralize.titleize} CSV Download", prisons_path(format: :csv), class: 'btn btn-default' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
        <% if_can_edit_or_destroy?(Prison) { %><th><%=t '.actions', :default => t("helpers.actions") %></th><% } %>
    </tr>
  </thead>
  <tbody>
    <% @prisons.each do |prison| %>
      <tr>
        <td><%= link_to prison.id, prison_path(prison) %></td>
        <td><%= link_to prison.name, prison_path(prison) %></td>
        <td><%=l prison.created_at %></td>
          <% if_can_edit_or_destroy?(prison) { %>
      <td>
          <%= if can? :edit, prison
                link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_prison_path(prison), :class => 'btn btn-default btn-xs'
          end %>
          <%= if can? :destroy, prison
                link_to t('.destroy', :default => t("helpers.links.destroy")),
                      prison_path(prison),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger'
          end %>
        </td>
          <% } %>
      </tr>
    <% end %>
  </tbody>
</table>
