<%- 
  model_class = Prison 
  page_title "#{model_class.model_name.human.pluralize.titleize}"
  page_title_right link_to("#{model_class.model_name.human.pluralize.titleize} CSV Download", prisons_path(format: :csv), class: 'btn btn-default')
-%>

<% if user_signed_in? %>
  <div class='actions-container'>
    <%= render partial: 'shared/index_actions',
          locals: {
            model_class: model_class,
            new_path: new_prison_path
          }
    %>
  </div>
<% end %>
<%-
  datatable_class = (can? :edit, Prison) ? 'datatable-prison-admin' : 'datatable-prison'
-%>
<table class="table table-striped table-hover table-nonfluid <%= datatable_class %>">
  <thead>
    <tr>
      <th></th>
      <th>Prison Name</th>
      <th>Number of People Currently Imprisoned In This Prison</th>
      <th>Number of People That Have Been Imprisoned In This Prison</th>
      <% if can? :edit, Prison %><th class="action-col"><%=t '.actions', :default => t("helpers.actions") %></th><% end %>
    </tr>
  </thead>
  <tbody>
    <% @prisons.each do |prison| %>
      <tr>
        <td><%= link_to t('helpers.links.view'), prison_path(prison), class: 'btn btn-default' %></td>
        <td><%= prison.name  %></td>
        <td><%= number_with_delimiter(prison['current_prisoner_count'])  %></td>
        <td><%= number_with_delimiter(prison['all_prisoner_count'])  %></td>
        <% if (can? :edit, prison) || (can? :destroy, prison) %>
          <td>
            <%= if can? :edit, prison
                  link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_prison_path(prison), :class => 'btn btn-default'
            end %>
            <%= if can? :destroy, prison
                  link_to t('.destroy', :default => t("helpers.links.destroy")),
                        prison_path(prison),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-danger'
            end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
