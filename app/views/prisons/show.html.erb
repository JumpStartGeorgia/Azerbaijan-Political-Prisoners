<%- model_class = Prison -%>
<% page_title model_class.model_name.human.titleize + ': ' + @prison.name %>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= simple_format(@prison.description) if @prison.description.present? %></dd>  <dt>
  <strong><%= model_class.human_attribute_name(:prisoners) %>:</strong></dt>
  <dd>
    <ol>
      <% @prisoners_in_prison.each do |prisoner| %>
        <li><%= link_to prisoner.name, prisoner %></li>
      <% end %>
    </ol>
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              prisons_path, :class => 'btn btn-default'  %>
<%= if can? :edit, @prison
      link_to t('.edit', :default => t("helpers.links.edit")),
              edit_prison_path(@prison), :class => 'btn btn-default'
end %>
<%= if can? :destroy, @prison
      link_to t('.destroy', :default => t("helpers.links.destroy")),
              prison_path(@prison),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger'
end %>
