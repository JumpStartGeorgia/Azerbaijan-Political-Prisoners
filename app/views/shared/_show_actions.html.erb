<%= link_to t('app.actions.view_all'), index_path, class: 'btn btn-default' %>
<%= if can? :edit, object
  link_to t('app.actions.admin.edit'), edit_path, class: 'btn btn-default'
end %>
<%= if can? :destroy, object
  link_to t('app.actions.admin.destroy'),
          show_path,
          method: 'delete',
          data: { confirm: t('app.actions.admin.confirm') },
          class: 'btn btn-danger'
end %>
