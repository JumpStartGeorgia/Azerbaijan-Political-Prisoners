<h1>Listing subtypes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subtypes.each do |subtype| %>
      <tr>
        <td><%= subtype.name %></td>
        <td><%= link_to subtype.type.name, subtype.type %></td>
        <td><%= subtype.description %></td>
        <td><%= link_to 'Show', subtype %></td>
        <td><%= link_to 'Edit', edit_subtype_path(subtype) %></td>
        <td><%= link_to 'Destroy', subtype, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subtype', new_subtype_path %>
