<%- 
  model_class = Tag 
  page_title 'Categories'
  page_title_right link_to("#{model_class.model_name.human.pluralize.titleize} CSV Download", tags_path(format: :csv), class: 'btn btn-default')
-%>

<% if user_signed_in? %>
  <div class='actions-container'>
    <%= render partial: 'shared/index_actions',
          locals: {
            model_class: model_class,
            new_path: new_tag_path
          }
    %>
  </div>
<% end %>

<%-
  datatable_class = (can? :edit, Tag) ? 'datatable-admin' : 'datatable'
-%>
<table class="table table-striped table-hover table-nonfluid <%= datatable_class %>">
  <thead>
    <tr>
      <th></th>
      <th>Category</th>
      <% if can? :edit, Tag %><th><%=t '.actions', :default => t("helpers.actions") %></th><% end %>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to t('helpers.links.view'), tag_path(tag), class: 'btn btn-default' %></td>
        <td><%= tag.name %></td>
        <% if (can? :edit, tag) || (can? :destroy, tag) %>
          <td>
            <%= if can? :edit, tag
                  link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_tag_path(tag), :class => 'btn btn-default'
            end %>
            <%= if can? :destroy, tag
                  link_to t('.destroy', :default => t("helpers.links.destroy")),
                        tag_path(tag),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-danger'
            end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
