<%- model_class = Tag -%>
<% page_title "#{model_class.model_name.human.pluralize.titleize}" %>

<div class='actions-container'>
  <%= render partial: 'shared/index_actions',
        locals: {
          model_class: model_class,
          new_path: new_tag_path
        }
  %>
  <%= link_to "#{model_class.model_name.human.pluralize.titleize} CSV Download", tags_path(format: :csv), class: 'btn btn-default' %>
</div>

<%-
  datatable_class = (can? :edit, Tag) ? 'datatable-admin' : 'datatable'
-%>
<table class="table table-striped <%= datatable_class %>">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <% if can? :edit, Tag %><th><%=t '.actions', :default => t("helpers.actions") %></th><% end %>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to tag.id, tag_path(tag) %></td>
        <td><%= link_to tag.name, tag_path(tag) %></td>
        <td><%=l tag.created_at %></td>
        <% if (can? :edit, tag) || (can? :destroy, tag) %>
          <td>
            <%= if can? :edit, tag
                  link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_tag_path(tag), :class => 'btn btn-default btn-xs'
            end %>
            <%= if can? :destroy, tag
                  link_to t('.destroy', :default => t("helpers.links.destroy")),
                        tag_path(tag),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger'
            end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
