<%= semantic_form_for @user do |f| %>
  <%= f.semantic_errors *f.object.errors.keys %>
  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :role,
                as: :select,
                include_blank: false,
                collection: roles_editable_by_current_user %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit,
                 as: :input,
                 button_html: { class: 'btn btn-success' } %>
  <% end %>
<% end %>
