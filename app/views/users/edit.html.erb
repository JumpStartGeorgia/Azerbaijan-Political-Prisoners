<%- model_class = User -%>
<% page_title t('shared.actions.with_obj.edit',
                obj: t('activerecord.models.user', count: 1)) %>

<% if user_signed_in? %>
  <div class='actions-container'>
    <%= render partial: 'shared/edit_actions',
               locals: {
                 object: @user,
                 index_path: users_path,
                 show_path: user_path
               }
    %>
  </div>
<% end %>

<%= render partial:'form' %>
