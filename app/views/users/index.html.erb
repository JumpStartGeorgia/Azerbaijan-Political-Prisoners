<%- model_class = User -%>
<% page_title "#{model_class.model_name.human.pluralize.titleize}" %>

<div class='actions-container'>
  <%= render partial: 'shared/index_actions',
        locals: {
          model_class: model_class,
          new_path: new_user_path
        }
  %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:role_id) %></th>
      <th><%= model_class.human_attribute_name(:last_sign_in_at) %></th>
      <% if_can_edit_or_destroy?(User) { %><th><%=t '.actions', :default => t("helpers.actions") %></th><% } %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= link_to user.email, user_path(user) %></td>
        <td><%= user.role.name if user.role.present? %></td>
        <td><%= user.last_sign_in_at %></td>
        <% if_can_edit_or_destroy?(user) { %>
            <td>
          <%= if can? :edit, User
          link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(user), :class => 'btn btn-default btn-xs'
          end %>
          <%= if can? :destroy, User
                link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger'
          end %>
        </td>
            <% } %>
      </tr>
    <% end %>
  </tbody>
</table>
