<%- 
  model_class = User 
  page_title "#{model_class.model_name.human.pluralize.titleize}"
-%>

<% if user_signed_in? %>
  <div class='actions-container'>
    <%= render partial: 'shared/index_actions',
          locals: {
            model_class: model_class,
            new_path: new_user_path
          }
    %>
  </div>
<% end %>

<%-
  datatable_class = (can? :edit, User) ? 'datatable-admin' : 'datatable'
-%>
<table class="table table-striped table-hover table-nonfluid <%= datatable_class %>">
  <thead>
    <tr>
      <th></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:role_id) %></th>
      <th><%= model_class.human_attribute_name(:last_sign_in_at) %></th>
      <% if can? :edit, User %><th><%=t '.actions', :default => t("helpers.actions") %></th><% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to t('helpers.links.view'), user_path(user), class: 'btn btn-default' %></td>
        <td><%= user.email %></td>
        <td><%= user.role.name if user.role.present? %></td>
        <td><%= user.last_sign_in_at %></td>
        <% if (can? :edit, user) || (can? :destroy, user) %>
          <td>
            <%= if can? :edit, User
            link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_user_path(user), :class => 'btn btn-default'
            end %>
            <%= if can? :destroy, User
                  link_to t('.destroy', :default => t("helpers.links.destroy")),
                        user_path(user),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-danger'
            end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
